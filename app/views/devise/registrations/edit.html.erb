<div class="page-header">
  <h2>Edytuj konto</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label 'Imię' %><br />
    <div class="controls">
      <%= f.text_field :name, class: 'form-control', autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label 'Nazwisko' %><br />
    <div class="controls">
      <%= f.text_field :surname, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label 'Email' %><br />
    <div class="controls">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label 'Miasto' %><br />
    <div class="controls">
      <%= f.collection_select :town_id, Town.all, :id, :name, {}, {class: 'selectpicker'} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label 'Preferowana pozycja' %><br />
    <div class="controls">
      <%= f.select :position, {'Bramkarz' => 'gk', 'Obrońca' => 'def', 'Pomocnik' => 'mid', 'Napastnik' => 'for'}, {},
                                                                                              {class: 'selectpicker'} %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Hasło' %> <i>(zostaw puste jeśli nie chcesz zmieniać)</i><br />
    <div class="controls">
      <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label 'Potwierdź hasło' %><br />
    <div class="controls">
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label 'Aktualne hasło' %> <i>(potrzebne do zatwierdzenia zmian)</i><br />
    <div class="controls">
      <%= f.password_field :current_password, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit 'Zapisz', :class => 'btn btn-primary', :style => 'color: white;' %>
    <%= link_to 'Wstecz', :back, :class => 'btn btn-default' %>
  </div>
<% end %>

<div class="page-header">
  <h3>Usuwanie konta</h3>
</div>

<p>Jesteś niezadowolony?
  <%= button_to 'Usuń konto', registration_path(resource_name), data: { confirm: 'Jesteś pewny?' }, method: :delete,
                                                                :class => 'btn btn-danger', :style => 'color: white;' %>
</p>
