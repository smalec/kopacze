= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label 'ImiÄ™'
    .controls
      = f.text_field :name, class: 'form-control', required: true
  .form-group
    = f.label 'Nazwisko'
    .controls
      = f.text_field :surname, class: 'form-control', required: true
  .form-group
    = f.label 'Email'
    .controls
      = f.email_field :email, class: 'form-control', required: true
  .form-group
    = f.label 'Miasto'
    .controls
      = f.collection_select :town_id, @towns, :id, :name
  .form-group
    = f.label 'Preferowana pozycja'
    .controls
      = f.select :position, {'Bramkarz' => 'gk', 'ObroÅ„ca' => 'def', 'Pomocnik' => 'mid', 'Napastnik' => 'for'}
  .form-group
    = f.label 'Administrator'
    .controls
      = f.check_box :is_admin
  .actions
    = f.submit 'Zapisz', :class => 'btn btn-primary'
    = link_to 'Wstecz', :back, :class => 'btn btn-default'
